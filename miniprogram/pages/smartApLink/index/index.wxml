<!--pages/smartApLink/index/index.wxml-->
<view class="page">
    <view class="weui-msg" wx:if="{{error}}">
        <view class="weui-msg__icon-area">
            <icon type="warn" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">{{error.title}}</view>
            <view class="weui-msg__desc">{{error.message}}</view>
        </view>
    </view>
    <view class="weui-loadmore" style="margin-top: 150px;" wx:else>
        <view class="weui-loading"></view>
        <view class="weui-loadmore__tips">正在加载</view>
    </view>
</view>